# ===== Common Config =====
export SUITE_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export LOG_DIR="$SUITE_ROOT/logs"
export BACKUP_DIR="$SUITE_ROOT/backups"
export DATA_DIR="$SUITE_ROOT/data"

# Backup
export BACKUP_SOURCE_DIRS="$HOME/Documents $SUITE_ROOT/data"
export BACKUP_EXCLUDES=".cache node_modules .git"
export BACKUP_MODE="tar"     
export BACKUP_RETENTION=5     

# Log Monitor
export LOG_FILES="/var/log/syslog"
export LOG_PATTERNS="error, failed, panic, segfault"

